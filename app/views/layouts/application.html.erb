<!DOCTYPE html>
<html>
<head>
  <title>Monitorassistant</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class='container'>
    <div class='row'>
      <div class='flash-container'>
        <% if flash[:notice] %>
          <div class="alert alert-success">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <%= flash[:notice] %>
          </div>
        <% elsif flash[:alert] %>
          <div class='alert alert-warning'>
            <button type='button' class='close' data-dismiss='alert'>&times;</button>
            <%= flash[:alert] %>
          </div>
        <% elsif flash[:error] %>
          <div class='alert alert-danger'>
            <button type='button' class='close' data-dismiss='alert'>&times;</button>
            <%= flash[:error] %>
          </div>
        <% end %>
      </div>
    </div>

    <% if current_user %>
    <div class='row'>
      <div class='navbar navbar-default'>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <li><%= link_to "Applications", applications_path %></li>
            <li><%= link_to "Events", api_events_path %></li>
          </ul>
          <!--<form class="navbar-form navbar-left" role="search">
            <div class="form-group">
              <input type="text" class="form-control" placeholder="Search">
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
          </form-->
          <% if current_user %>
            <ul class="nav navbar-nav navbar-right">
              <li><%= link_to current_user.name, edit_user_registration_path %></li>
              <li><%= link_to " ", destroy_user_session_path, method: :delete, class: 'glyphicon glyphicon-log-out' %></li>
            </ul>
          <% end %>
        </div>
      </div>
    </div>
    <% end %>

    <div class='row'>
      <%= yield %>
    </div>
  </div>
</body>
</html>
